{% extends 'base.html.twig' %}

{% block body %}

<h1>Inscription</h1>

{{ form_start(form) }}

{{ form_row(form.username, {'attr': {'placeholder': 'Votre nom d\'utilisateur'}}) }}
{{ form_row(form.email, {'attr': {'placeholder': 'Adresse mail'}}) }}
{{ form_row(form.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
{{ form_row(form.confirm_password, {'attr': {'placeholder': 'Confirmation du mot de passe'}}) }}


<button type="submit" class="btn btn-success">Valider</button>
{{ form_end(form) }}

{% endblock %}